<h2>&Uuml;bersicht der Spiele</h2>
<h3>Vorrundenspiele</h3>
<% @groups.each do |group| %>
    <% count = 0 %>
    <h4>Gruppe <%= h group.name %></h4>
    <table>
      <% group.games.each do |game| %>
          <tr>
            <td align="left"><strong><%= l game.gametime %></strong></td>
            <td colspan="2" align="left"><strong><%= game.stadium.name %></strong></td>
          </tr>
          <tr>
            <td colspan="3">
              <%= team_helper(game.team_one) %>
              <%= image_tag(game.team_one.flag_uri) %>    <%= game.goals_team_one %>
              : <%= game.goals_team_two %>    <%= image_tag(game.team_two.flag_uri) %>
              <%= team_helper(game.team_two) %>
            </td>

            <% unless is_admin? %>
                <td><%= tipp_helper(game) %></td>
            <% else %>
                <td><%= link_to image_tag("/images/edit.jpg", :title => "Bearbeiten"), edit_game_url(game) %></td>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>
<h3>Finalrunden</h3>
<% @rounds.each do |round| %>
    <h4><%= h round.name %></h4>
    <table>
      <% round.games.each do |game| %>
          <tr>
            <td align="left"><strong><%= l game.gametime %></strong></td>
            <td colspan="2" align="left"><strong><%= game.stadium.name %></strong></td>
          </tr>
          <tr>
            <td colspan="3">
              <%= team_helper(game.team_one) %>
              <%= image_tag(game.team_one.flag_uri) if game.team_one %>    <%= game.goals_team_one %>
              : <%= game.goals_team_two %>    <%= image_tag(game.team_two.flag_uri) if game.team_two %>
              <%= team_helper(game.team_two) %>
            </td>

            <% unless is_admin? %>
                <td><%= tipp_helper(game) %></td>
            <% else %>
                <td><%= link_to image_tag("/images/edit.jpg", :title => "Bearbeiten"), edit_game_url(game) %></td>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>
