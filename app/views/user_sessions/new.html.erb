<h1>Login</h1>
<% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.error_message_on :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.error_message_on :password %>
    <fieldset class="buttons">
      <%= f.submit 'Login!' %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Remember me?', :class => 'check_box' %>
    </fieldset>
<% end %>