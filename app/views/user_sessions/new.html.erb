<h2>Login</h2>
<% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <div>
      <%= f.label :email, "Emailadresse:" %>
      <br/>
      <%= f.text_field :email %>
      <br/>
      <%= f.label :password %>
      <br/>
      <%= f.password_field :password %>
      <br/>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Angemeldet bleiben?', :class => 'check_box' %>
      <br/>
      <%= f.submit 'Anmelden' %>
    </div>
<% end %>
